#!/bin/bash

if (( "$#" != 1 ))
then
    echo "you need to provide a version number"
	exit 1
fi

bundle install && \
npm install && \
node_modules/.bin/bower cache clean --allow-root && \
node_modules/.bin/bower install --allow-root --strict-shrinkwrap && \
gulp clean && \
gulp && \
git add -A && \
git commit -m "Commit for release $1" && \
git tag -a $1 && \
git push && \
git push origin $1
